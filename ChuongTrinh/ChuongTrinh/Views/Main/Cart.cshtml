
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout_Client.cshtml";
}
@using (Html.BeginForm())
{
<div class="row col-md-12 mb-3 " style="margin-left:100px;">
    <div class="col-md-4">
        <img width="400" height="400" src="~/wwwroot/Client/images/products/h5.png" alt="" />
    </div>
    <div class="col-md-8" style="border:groove;border-radius:20px;margin-bottom:10px;padding:10px; width:auto;">
       
        <div class="col-md-8">
            <h4 style=" margin-bottom:20px;"><b>TenSP</b></h4>
            <br />
            <p><b>Giá</b> : Model.GiaBan.ToString("C0", CultureInfo.CurrentCulture).Substring(1) <u>đ</u></p>
            <br />
            <p><b>Loại</b> : Model.DanhMuc.TenDanhMuc</p>
            <br />
            <p><b>Số lượng : </b></p><input name="Quantity" class="form-control" type="number" min="1" />
        </div>
        <div class="col-md-12">
             
            <a class="btn btn-sm btn-success col-md-6 mt-3"><i class="fas fa-money-check-alt"> Thanh toán</i></a>
            <a class="btn btn-danger col-md-3 mt-3"><i class="fas fa-minus-circle"> Xóa</i></a>
        </div>
    </div>

</div>
}
